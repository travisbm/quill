<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading"><strong>Group:</strong> <%= @group.name %> </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    <div class="post-heading">
      <h4>Members</h4>
    </div>

    <% @group.users.each do |user| %>
      <div class="list-group-card-members">
        <a href="/users/<%= user.id %>" class="list-group-item">
          <p class="list-group-item-text"><%= user.full_name %></p>
        </a>
      </div>
    <% end %>
    <%= link_to 'New post', new_post_path(conversation_id: params[:id]) %>
  </div>

  <div class="col-md-10">
    <div class="post-heading">
      <h4>Conversations</h4>
    </div>

    <% @group.conversations.each do |conversation| %>
      <div class="list-group-card-conversations">
        <a href="/conversations/<%= conversation.id %>" class="list-group-item">
          <p class="list-group-item-text"><%= conversation.title %></p>
        </a>
      </div>
    <% end %>
  </div>
</div>
