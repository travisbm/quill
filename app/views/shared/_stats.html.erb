<% @user ||= current_user %>
<div class="stats">
    <a href="/users/<%= params[:id] %>/groups">
      <p class="user-stats count"><%= @user.groups.count %></p><br/>
      <h3 class="user-stats">Groups</h3>
    </a>
    <a href="/users/<%= params[:id] %>/posts">
      <p class="user-stats count"><%= @user.posts.count %></p><br/>
      <h3 class="user-stats">Posts</h3>
    </a>

  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>
