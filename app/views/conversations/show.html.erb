<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading"><strong>Conversation Title:</strong> <%= @conversation.title %> </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    <div class="post-heading">
      <h4>Members</h4>
    </div>

    <% @conversation.users.each do |user| %>
      <div class="list-group-card-members">
        <a href="/users/<%= user.id %>" class="list-group-item">
          <p class="list-group-item-text"><%= user.full_name %></p>
        </a>
      </div>
    <% end %>
  </div>

  <div class="col-md-10">
    <div class="post-heading list-header">
      <h4>Posts</h4>
    </div>
    <div class="list-header button">
      <%= link_to 'New post', new_post_path(conversation_id: params[:id]), :class => "btn btn-default" %>
    </div>

    <div class="list-group">
      <% @posts = @conversation.posts.paginate(:page => params[:page], :per_page => 5).order('created_at DESC') %>
      <% @posts.each do |post| %>
        <div class="list-group-card">
          <a href="/posts/<%= post.id %>" class="list-group-item">
            <h4><%= post.title %></h4>
            <p class="list-group-item-text"><%= post.body %></p>
            <h5 class="list-group-item-heading"><%= post.user.full_name %></h5>
          </a>
        </div>
      <% end %>
    </div>
    <%= will_paginate @posts %>
  </div>
</div>
