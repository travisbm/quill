<div class="row">

  <div class="col-md-3">
    <div class="row">
      <div class="col-md-12 user-info">
        <div class="panel panel-default">
          <!-- Default panel contents -->
          <div class="panel-heading"><%= @user.full_name %></div>
            <ul class="list-group">
              <li class="list-group-item">Email: <%= @user.email %></li>
              <li class="list-group-item">Following: <%= @user.following.count %></li>
              <li class="list-group-item">Followers: <%= @user.followers.count %></li>
            </ul>
        </div>
        <%= render 'follow_form' if logged_in? %>
      </div>
    </div>
  </div> <!-- End of 3-col div -->

  <div class="col-md-9">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <!-- Default panel contents -->
          <div class="panel-heading"><%= @title %></div>
          <% if @users.any? %>
            <ul class="list-group">
              <%= render @users %>
            </ul>
          <% end %>
        </div>
      </div>
      <%= will_paginate %>
    </div>
  </div>

</div>
