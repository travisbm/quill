<div class="row">
  <div class="col-md-3">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <%= render 'follow_form' if logged_in? %>
  </div>

  <div class="col-md-9">
    <div class="post-heading">
      <h4><%= @title %></h4>
    </div>

    <% if @users.any? %>
      <div class="list-group">
        <%= render @users %>
      </div>
    <% end %>
    <%= will_paginate %>
  </div>
</div>
