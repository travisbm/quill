<div class="row">
  <div class="col-md-3">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <%= render 'follow_form' if logged_in? %>
  </div>

  <div class="col-md-9">
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading"><%= @title %></div>
      <% if @users.any? %>
        <ul class="list-group">
          <%= render @users %>
        </ul>
      <% end %>
    </div>
    <%= will_paginate %>
  </div>
</div>
