<!DOCTYPE html>
<html>
<head>
  <title>Quill</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <link href='https://fonts.googleapis.com/css?family=Dosis' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Dancing+Script' rel='stylesheet' type='text/css'>
</head>
<div class="container">

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">
          <img alt="Brand" src="/assets/ink6.jpg">
        </a>
      </div>
      <div class="navbar-header">
        <h4 class="navbar-text site-name">Quill</h4>
      </div>
      <div class="navbar-header">
        <% if logged_in? %>
          <p class="navbar-text navbar-left"><%= link_to 'Profile', current_user %></p>
          <p class="navbar-text navbar-left"><%= link_to 'Groups', groups_path %></p>
        <% end %>
      </div>
      <div>
        <% if logged_in? %>
          <p class="navbar-text navbar-right log-in"><%= link_to 'Log out', logout_path, :method => :delete %></p>
        <% end %>
      </div>
    </div>
  </nav>

  <body>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>

  <%= yield %>

  </body>
</div>
</html>
